<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/winter_bg">

    <com.example.fragments.SnowfallView
        android:id="@+id/snowAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/winterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WINTER\nFRAGMENT"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:fontFamily="@font/home_video"
        android:gravity="center"
        android:background="@drawable/dialog_background"
        android:padding="16dp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/signalFade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNAL FADE"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:fontFamily="@font/home_video"
        android:letterSpacing="0.15"
        app:layout_constraintTop_toBottomOf="@id/winterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/winterTitle"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/dogDialogueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/dialog_background"
                android:padding="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/home_video"
                android:gravity="center" />

            <ImageView
                android:id="@+id/pet_dog"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/pet_dog" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/catDialogueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/dialog_background"
                android:padding="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/home_video"
                android:gravity="center" />

            <ImageView
                android:id="@+id/pet_cat"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-18dp"
                android:layout_marginEnd="-3dp"
                android:src="@drawable/pet_cat" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnChoice1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="I DO NOT KNOW WHAT TO CHOOSE ANYMORE."
            android:backgroundTint="#7B2CBF"
            android:fontFamily="@font/home_video"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnChoice2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="EVERY DECISION FEELS HEAVY."
            android:backgroundTint="#7B2CBF"
            android:fontFamily="@font/home_video"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnChoice3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="I NEED TO FIND MY OWN PATH."
            android:backgroundTint="#7B2CBF"
            android:fontFamily="@font/home_video" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>