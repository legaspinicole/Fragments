<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/winter_bg">

    <com.example.fragments.SnowfallView
        android:id="@+id/snowAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/winterTitle"
        android:layout_width="341dp"
        android:layout_height="136dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/dialog_background"
        android:fontFamily="@font/home_video"
        android:gravity="center"
        android:text="WINTER\nFRAGMENT"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    

    <TextView
        android:id="@+id/signalFade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="QUIET PATH"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:fontFamily="@font/home_video"
        app:layout_constraintTop_toBottomOf="@id/winterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/dogImage"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:elevation="2dp"
        android:src="@drawable/pet_dog"
        app:layout_constraintBottom_toTopOf="@+id/quoteContainer1"
        app:layout_constraintStart_toStartOf="@+id/quoteContainer1"
        app:layout_constraintTop_toTopOf="@+id/quoteContainer1"
        android:layout_marginStart="-10dp" />

    <FrameLayout
        android:id="@+id/quoteContainer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/dialog_background"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signalFade">

        <TextView
            android:id="@+id/dogDialogueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/home_video"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/catImage"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginEnd="-15dp"
        android:elevation="2dp"
        android:scaleX="-1"
        android:src="@drawable/pet_cat"
        app:layout_constraintBottom_toTopOf="@+id/quoteContainer2"
        app:layout_constraintEnd_toEndOf="@+id/quoteContainer2"
        app:layout_constraintTop_toTopOf="@+id/quoteContainer2"
        app:layout_constraintVertical_bias="0.609" />

    <FrameLayout
        android:id="@+id/quoteContainer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/dialog_background"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quoteContainer1">

        <TextView
            android:id="@+id/catDialogueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/home_video"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="invisible" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="84dp"
        android:alpha="0"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/btnChoice1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/choice_button_background"
            android:fontFamily="@font/home_video"
            android:gravity="center"
            android:text="I DO NOT KNOW WHAT TO CHOOSE ANYMORE."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnChoice2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/choice_button_background"
            android:fontFamily="@font/home_video"
            android:gravity="center"
            android:text="EVERY DECISION FEELS HEAVY."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnChoice3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/choice_button_background"
            android:fontFamily="@font/home_video"
            android:gravity="center"
            android:text="I NEED TO FIND MY OWN PATH."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>