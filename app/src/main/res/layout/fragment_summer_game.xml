<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/backgroundLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_summer"
        android:contentDescription="Pixel art beach background" />

    <ImageView
        android:id="@+id/cloudsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/clouds"
        android:visibility="visible" />

    <com.example.fragments.PixelStarView
        android:id="@+id/starView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <FrameLayout
            android:id="@+id/dialogBox"
            android:layout_width="302dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/dialog_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/home_video"
                android:gravity="center"
                android:text="SUMMER\nFRAGMENT"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/home_video"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="TAP EACH SIGNAL TO DIM THE NOISE"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/dialogBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            tools:layout_editor_absoluteY="138dp" />

        <LinearLayout
            android:id="@+id/gridContainer"
            android:layout_width="303dp"
            android:layout_height="398dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/grid_container_black_bg"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@id/tvFooterStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.85">

            <GridLayout
                android:layout_width="269dp"
                android:layout_height="460dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="3">

                <ImageButton
                    android:id="@+id/btnMobile"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/grid_container_bg"
                    android:contentDescription="Mobile Phone"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/phone" />

                <ImageButton
                    android:id="@+id/btnMail"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/grid_container_bg"
                    android:contentDescription="Mail Envelope"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/email" />

                <ImageButton
                    android:id="@+id/btnMessage"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/grid_container_bg"
                    android:contentDescription="Chat Bubble"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/text" />

                <ImageButton
                    android:id="@+id/btnMegaphone"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/grid_container_bg"
                    android:contentDescription="Megaphone"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/megaphone" />

                <ImageButton
                    android:id="@+id/btnBell"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/grid_container_bg"
                    android:contentDescription="Notification Bell"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bell" />

                <ImageButton
                    android:id="@+id/btnTv"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/grid_container_bg"
                    android:contentDescription="TV Monitor"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tv" />

            </GridLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvFooterStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="76dp"
            android:fontFamily="@font/home_video"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="6 SIGNALS TO DIM"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>