<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/winter_bg">

    <com.example.fragments.SnowfallView
        android:id="@+id/snowAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <LinearLayout
            android:id="@+id/dialogContainer"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingBottom="80dp"
            app:backgroundTint="#1D2E3D">

            <ImageView
                android:id="@+id/winterIcon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/snowflakes" />

            <TextView
                android:id="@+id/restoredBoxText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/home_video"
                android:gravity="center"
                android:lineSpacingExtra="14dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="0.01"
                android:text="WINTER\nFRAGMENT\nRESTORED"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>